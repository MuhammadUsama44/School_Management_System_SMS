<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFEB3B"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="School Management\n System"
        android:textStyle="bold"
        android:fontFamily="cursive"
        android:textSize="40sp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_margin="10sp"/>

    <Button
        android:id="@+id/subject_btn"
        android:layout_width="180sp"
        android:layout_height="200sp"
        android:layout_marginTop="15sp"
        android:text=" Subject \n Crud\n Operation"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_margin="10sp"
        android:layout_centerVertical="true"/>


    <Button
        android:id="@+id/student_btn"
        android:layout_width="180dp"
        android:layout_height="200sp"
        android:layout_marginTop="15sp"
        android:text=" Student \nCrud\n Operation"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_toRightOf="@+id/subject_btn"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:id="@+id/logout_btn"
        android:padding="10sp"
        android:backgroundTint="@color/black"
        android:layout_marginTop="100sp"
        android:layout_below="@+id/subject_btn"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        tools:ignore="MissingConstraints" />

</RelativeLayout>